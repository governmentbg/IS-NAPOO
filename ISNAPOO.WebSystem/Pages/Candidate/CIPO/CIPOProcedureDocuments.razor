@using ISNAPOO.Core.ViewModels.CPO.ProviderData
@inherits BlazorBaseComponent

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <nav class="navbar navbar-expand  ">
                        <!-- Left navbar links -->
                        <ul class="navbar-nav">
                            <li class="nav-item d-none d-sm-inline-block">
                                <button class="btn btn-warning btn-outline-warning waves-effect md-trigger" type="button" style="margin-right: 30px;" @onclick="SendNotificationAsync">Изпрати известие към ЦИПО</button>
                            </li>
                            <li class="nav-item d-none d-sm-inline-block">
                                &nbsp;
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="card-body">
                    <SfGrid @ref="documentGrid" DataSource="addedDocumentsSource" AllowSorting="false" AllowFiltering="false" AllowPaging=false AllowTextWrap="true" AllowSelection="true">
                        <GridTemplates>
                            <EmptyRecordTemplate Context="emptyRecord">
                                <span>Няма намерени резултати.</span>
                            </EmptyRecordTemplate>
                        </GridTemplates>
                        <GridColumns>
                            <GridColumn Type="ColumnType.CheckBox" Width="5%"></GridColumn>
                            <GridColumn Width="5%">
                                <Template>
                                    <button @onclick="(() => GetDocument(context as ProcedureDocumentVM))" class="btn-row"><i class="fa fa-file-o"></i></button>
                                </Template>
                            </GridColumn>
                            <GridColumn Field="gridRowCounter" HeaderText="" TextAlign="TextAlign.Left" Width="5%" AllowFiltering="false" AllowSorting="false"></GridColumn>
                            <GridColumn Field="DocumentTypeNameDescription" HeaderText="Вид на документа" TextAlign="TextAlign.Left" Width="45%"></GridColumn>
                            <GridColumn Field="DS_DocNumber" HeaderText="№ на работен документ" TextAlign="TextAlign.Left" Width="10%"></GridColumn>
                            <GridColumn Field="DS_DATEOnly" HeaderText="Дата" Format="dd.MM.yyyy" TextAlign="TextAlign.Left" Width="10%"></GridColumn>
                            <GridColumn Field="DS_OFFICIAL_DocNumber" HeaderText="№ на документ" TextAlign="TextAlign.Left" Width="10%"></GridColumn>
                            <GridColumn Field="DS_OFFICIAL_DATEOnly" HeaderText="Дата" Format="dd.MM.yyyy" TextAlign="TextAlign.Left" Width="10%"></GridColumn>
                        </GridColumns>
                        <GridSelectionSettings CheckboxOnly="true" />
                        <GridEvents TValue="ProcedureDocumentVM" RowSelected="DocumentSelectedHandler" RowDeselected="DocumentDeselectedHandler" />
                    </SfGrid>
                </div>
            </div>
        </div>
    </div>
</div>

<ToastMsg @ref="toast"></ToastMsg>

